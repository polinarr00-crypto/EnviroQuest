<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_quest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic Cleanup"
                android:textColor="@color/text_main"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tv_quest_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="+500 PTS"
                android:textColor="@color/accent"
                android:fontFamily="sans-serif-black"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_quest_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Clean up plastic waste in your backyard and submit a photo proof."
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action_quest"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:text="START MISSION"
            android:textSize="14sp"
            android:fontFamily="sans-serif-black"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/primary"
            app:rippleColor="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>